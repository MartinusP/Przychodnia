@using Przychodnia.App_GlobalResources;
@model Przychodnia.Models.PracownikOddzialViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PRACOWNIK</h4>
        <hr />

            <div class="col-md-10">
               @for (int i = 0; i < Model.Oddzialy.Count(); i++)
               {
                    @Html.EditorFor(m => Model.Oddzialy[i].Zaznaczenie)
                    @Html.DisplayFor(m => Model.Oddzialy[i].Nazwa)
                    @Html.HiddenFor(m => Model.Oddzialy[i].Nazwa)
                    @Html.HiddenFor(m => Model.Oddzialy[i].ID_CheckBoxViewModel)
               }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

}

<div>
    @Html.ActionLink(MultiLanguage.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
